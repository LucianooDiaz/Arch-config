#!/bin/bash

# Archivo de colores generado por pywal
WAL_COLORS="$HOME/.cache/wal/colors"

# Extraer color de fondo (primera línea)
BACKGROUND=$(sed -n 1p "$WAL_COLORS")

DUNST_CONFIG="$HOME/.config/dunst/dunstrc"

# Reemplazar el background sin comillas, solo líneas que empiecen con background =
sed -i "s/^background = .*/background = $BACKGROUND/" "$DUNST_CONFIG"

# Reemplazar frame_color si existe
sed -i "s/^frame_color = .*/frame_color = $BACKGROUND/" "$DUNST_CONFIG"

# Reiniciar dunst para aplicar cambios
pkill -x dunst
dunst &

